---
import Logo from '../assets/logo_cream.svg';
import MenuIcon from './MenuIcon.astro';
import MuteIcon from './MuteIcon.astro';
---

<header class="bafi-header">
    <div class="header-container">
        <a href="/"><Logo width="64" height="64"/></a>
        <div class="header-icons">
            <MenuIcon />
            <MuteIcon />
        </div>
    </div>
</header>

<style>
    .bafi-header {
        background: linear-gradient(to bottom, var(--brand-dark-background), transparent);
        position: sticky;
        top: 0;
        width: 100%;
        height: 80px;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 100;
        
    }
    .header-container {
        width: 75%;
        max-width: 1440px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .header-icons{
        display: flex;
        align-items: center;
        gap: 20px;
    }
</style>